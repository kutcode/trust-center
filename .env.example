# ==============================================
# TRUST CENTER ENVIRONMENT CONFIGURATION
# ==============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# Email Provider: 'mailpit' (development) or 'resend' (production)
EMAIL_PROVIDER=mailpit

# For Resend (Production):
# 1. Sign up at https://resend.com (free tier: 3,000 emails/month)
# 2. Verify your email address
# 3. Get API key from dashboard: https://resend.com/api-keys
# 4. Set EMAIL_PROVIDER=resend and add your API key below
RESEND_API_KEY=

# SMTP Settings (for Mailpit development - usually not needed)
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@trustcenter.local

# ==============================================
# SECURITY CONTROLS
# ==============================================
# Admin signup is disabled by default. Enable only temporarily during bootstrap.
ALLOW_ADMIN_SIGNUP=false
# Optional bootstrap token for /api/auth/signup. If set, clients must send:
# x-admin-signup-token: <ADMIN_SIGNUP_TOKEN>
ADMIN_SIGNUP_TOKEN=

# Test email endpoint is disabled by default.
# /api/test-email requires admin auth and this flag set to true.
ENABLE_TEST_EMAIL=false

# ==============================================
# SALESFORCE INTEGRATION (OPTIONAL)
# ==============================================
# OAuth 2.0 Connected App credentials (recommended integration method)
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
# Must match Connected App callback URL exactly
SALESFORCE_REDIRECT_URI=http://localhost:4000/api/admin/integrations/salesforce/callback
# Use https://test.salesforce.com for sandboxes
SALESFORCE_AUTH_BASE_URL=https://login.salesforce.com
# API version for SOQL queries
SALESFORCE_API_VERSION=v59.0

# Mapping fields for organization access sync:
# - Status field decides if account should be granted trust center access
# - Domain field is used to map account -> organization email domain
SALESFORCE_STATUS_FIELD=Type
SALESFORCE_ALLOWED_STATUSES=Customer,Active Customer
SALESFORCE_DOMAIN_FIELD=Website

# ==============================================
# SECURITY BEST PRACTICES
# ==============================================
# - Never commit .env file to git
# - Use strong, unique API keys
# - Rotate API keys regularly
# - Use different keys for development and production
# - Monitor email sending logs for suspicious activity

